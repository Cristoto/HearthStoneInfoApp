<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hsi.hearthstoneinfo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".ContactoActivity"
            android:label="@string/title_activity_contacto"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".AcercaDeActivity"
            android:label="@string/title_activity_acerca_de"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".CartasActivity"
            android:label="@string/title_activity_cartas"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".MazosActivity"
            android:label="@string/title_activity_mazos"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".ContactoTab"
            android:label="@string/title_activity_contacto_tab"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".InsertarMazo"
            android:label="@string/title_activity_insertar_mazo"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name=".VerCarta"
            android:label="@string/title_activity_ver_carta"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
    </application>

</manifest>